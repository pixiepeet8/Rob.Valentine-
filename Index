  <!-- Tenor embed script -->
  <script async src="https://tenor.com/embed.js"></script>

  <script>
    const arena = document.getElementById("arena");
    const noBtn = document.getElementById("noBtn");
    const yesBtn = document.getElementById("yesBtn");
    const question = document.getElementById("question");
    const success = document.getElementById("success");

    const DODGE_RADIUS = 120;

    function moveNo() {
      const a = arena.getBoundingClientRect();
      const b = noBtn.getBoundingClientRect();

      const maxX = a.width - b.width;
      const maxY = a.height - b.height;

      const x = Math.random() * Math.max(0, maxX);
      const y = Math.random() * Math.max(0, maxY);

      noBtn.style.left = x + "px";
      noBtn.style.top = y + "px";
      noBtn.style.transform = "translate(0, 0)";
    }

    function distToButtonCenter(clientX, clientY) {
      const b = noBtn.getBoundingClientRect();
      const cx = b.left + b.width / 2;
      const cy = b.top + b.height / 2;
      return Math.hypot(clientX - cx, clientY - cy);
    }

    arena.addEventListener("pointermove", (e) => {
      if (distToButtonCenter(e.clientX, e.clientY) < DODGE_RADIUS) {
        moveNo();
      }
    });

    noBtn.addEventListener("pointerdown", (e) => {
      e.preventDefault();
      moveNo();
    });

    yesBtn.addEventListener("click", () => {
      question.style.display = "none";
      success.style.display = "block";
      document.title = "Congratulations ðŸŽ‰";
    });

    // initial random placement
    moveNo();
  </script>
